   <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/symbol"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="32dp"/>

    <ImageView
        android:id="@+id/p_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_up"
        android:layout_below="@id/symbol"
        android:layout_alignLeft="@idsymbol"/>

    <TextView
        android:id="@+id/up_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/up_image"
        android:layout_alignTop="@id/up_image"
        android:textColor="@android:color/white"
        android:textSize="15dp"/>

    <ImageView
        android:id="@+id/down_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_down"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@id/up_text"
        android:layout_alignTop="@id/up_image"/>

    <TextView
        android:id="@+id/down_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/down_image"
        android:layout_alignTop="@id/up_image"
        android:textColor="@android:color/white"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="80dp"
        android:layout_below="@id/up_image"
        android:layout_marginLeft="24dp"/>

    <ImageView
        android:id="@+id/fahrenheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fahrenheit"
        android:layout_toRightOf="@id/temperature"
        android:layout_alignTop="@id/temperature"
        android:layout_marginLeft="8dp"/>
